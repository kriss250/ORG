<?php if(isset($rooms)): ?>
<h4>Room Posts</h4>
    <table class="table-bordered table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Room</th>
            <th>Order ID</th>
            <th>T.P</th>
        </tr>
    </thead>
    <?php $tt2=0; ?>
    <?php foreach($rooms as $room): ?>
    <tr>
        <?php if(isset($guest)): ?>
             <td><?php echo e($guest[$room->room][0]->guest); ?> <p style="font-size:12px;">(<?php echo e($guest[$room->room][0]->Account); ?>)</p> </td>
        <?php endif; ?>

        <td><?php echo e($room->room); ?></td>
          <td class="text-right"><?php echo implode('<br />  ', explode(',',$room->billid)); ?> </td>
        
          <td class="text-right"><?php echo implode('<br />  ', explode(',',$room->totals)); ?> </td>
        <?php 
        $its = explode(',',$room->totals);
        foreach($its as $it)
        {
            $tt2 += $it;
        }
        ?>
 
    </tr>
   
    <?php endforeach; ?>

    <tr><td style="text-align:right" colspan="3"><b><?php echo e(number_format($tt2)); ?> Rwf</b></td></tr>
</table>

<?php endif; ?>

<?php if(isset($credits)): ?>
<h4>Credit Report</h4>
<table class="table-bordered table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Order ID</th>
            <th>T.P</th>
            <th>User</th>
        </tr>
    </thead>
    <?php $tt=0; ?>
    <?php foreach($credits as $credit): ?>
    <tr>
        <td><?php echo e($credit->customer); ?></td>
          <td class="text-right"><?php echo implode('<br />', explode(',',$credit->billid)); ?> </td>
        
          <td class="text-right"><?php echo implode('<br />', explode(',',$credit->totals)); ?> </td>
        
        <td><?php echo e($credit->username); ?></td>

         <?php 
        $its = explode(',',$credit->totals);
        foreach($its as $it)
        {
            $tt += $it;
        }
        
        ?>

    </tr>
   
    <?php endforeach; ?>

    <tr><td style="text-align:right" colspan="3"> <b> <?php echo e(number_format($tt)); ?> Rwf</b> </td></tr>
</table>
<?php endif; ?>
