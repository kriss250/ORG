<?php
    $rows = "";
    $ic = 0;
    $span =1;

    foreach($data as $res){
            
        $span += (isset($data[$ic+1]->idreservation) && ($data[$ic+1]->idreservation  ==  $data[$ic]->idreservation)) ? 1 : 0;
        $c_span  = (isset($data[$ic-1]->idreservation) && ($data[$ic-1]->idreservation  ==  $data[$ic]->idreservation)) ? 'data-spn="c_span"' : "";
        $rows .= '<tr '.$c_span.' '.($res->is_group > 0 ? "class=group-reservation" : "").'>
                 <td>'.$res->room_number.'</td>
                 <td>'.$res->type_name.'</td>
                 <td>'.$res->guest .'</td>
                 <td>'. $res->Company .'</td>
                 <td>'. \App\FX::Date($res->checkin) .'</td>
                 <td>'. \App\FX::Date($res->checkout) .'</td>
                 <td>'. number_format($res->due_amount) .'</td>
                '.
                (($span <= 1) ? 
                '<td  rowspan="'.$span.'">0</td>
                <td rowspan="'.$span.'">0</td>
                <td rowspan="'.$span.'">0</td>
                <td rowspan="'.$span.'">'. number_format($res->due_amount) .'</td>
                <td rowspan="'.$span.'"> '. number_format($res->balance_amount) .'</td>
                <td rowspan="'.$span.'"> '. number_format($res->due_amount-$res->balance_amount) .'</td>
            </tr>' : '');
        $span =  (isset($data[$ic+1]->idreservation) && ($data[$ic+1]->idreservation  !=  $data[$ic]->idreservation)) ? 0 : $span;
        $ic++;
    }


?>
