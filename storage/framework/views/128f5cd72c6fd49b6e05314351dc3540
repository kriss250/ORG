

<?php $__env->startSection("contents"); ?>

 
<h3 class="text-center">Monthly Room Sales (by Room)</h3>
<br />
        <table class="room_sales_table">

                <?php 
                
                $days = date('t');

                $totalSales = 0;

                for($i=1;$i<=$days;$i++){
                    $rowspan  =(($i==15 || $i==14) && $days==28) ? 'rowspan="2"' : '';
                    $newRow = $days%2;
                    echo  (($i==1) ? '<tr><td></td><td>' : "<td $rowspan>"). $i.(($i==15) ? '</td></tr><tr class="last_row"><td style="background:#e6e6e6">Room</td>' : '</td>');
                }
                
                //rooms loop
                foreach($data as $room){
                    
                    $rates = explode( ',',$room->Rates);
                    $resdays =explode(',',$room->dayofmo);
                    
                    
                    //room month loop
                    for($i=1;$i<=$days;$i++){
                        $rowspan  =(($i==15 || $i==14) && $days==28) ? 'rowspan="2"' : '';
                        
                        if($i)
                            $theRate= 0;
                        $key = -1;
                        $keys = array_keys($resdays,$i);
                        
                        foreach($keys as $key){
                            $theRate += (($key>-1) ? $rates[$key] : 0);
                        }
                        
                        $totalSales +=$theRate; 
                        echo  (($i==1) ? '<tr><td class="room_cell"></td><td>' : "<td $rowspan>"). (($theRate>0) ? number_format( $theRate,0) : '.'). (($i==15) ? '</td></tr><tr class="last_row"><td class="room_cell">'.$room->room_number.'</td>' : '</td>');
                        
                    }
                    
                }
                
                
                ?>
           
        </table>

<div class="report_summary">
    <p>Total Sales</p>
    <div class="content"><b> <?php echo e(number_format($totalSales,0)); ?> </b></div>
</div>
<?php $__env->stopSection(); ?>
