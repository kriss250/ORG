<?php if(count($bill)>0): ?>
  
    <?php print '<?xml version="1.0" encoding="UTF-8"?>';?>
<Bill offtariff="<?php echo e($bill[0]->status == \ORG\Bill::OFFTARIFF ? 1 : 0); ?>" id="<?php echo e($bill[0]->idbills); ?>">
    <header>
        <logo><?php echo e(\ORG\Settings::$LOGO); ?></logo>
        <email><?php echo e(\ORG\Settings::$EMAIL); ?></email>
        <phone><?php echo e(\ORG\Settings::$PHONES); ?></phone>
    </header>

    <customer><?php echo e($bill[0]->customer); ?></customer>

    <printdate><?php echo e(\ORG\Dates::ToDSPFormat(\ORG\Dates::$RESTODATE)." ".date("H:i:s")); ?></printdate>

    <orderdate><?php echo e($bill[0]->date); ?></orderdate>

    <biller><?php echo e($bill[0]->username); ?></biller>

    <waiter><?php echo e($bill[0]->waiter_name); ?></waiter>
    <items>
        <?php foreach($bill as $b): ?>
            <Item code="<?php echo e($b->EBM); ?>" name="<?php echo e($b->product_name); ?>" qty="<?php echo e($b->qty); ?>" uprice="<?php echo e($b->unit_price); ?>" subtotal="<?php echo e($b->product_total); ?>"></Item>
        <?php endforeach; ?>
    </items>
        <total>
        <?php echo e($bill[0]->bill_total); ?>

        </total>
    </Bill>
    <?php endif; ?>
